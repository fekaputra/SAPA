<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent">
		
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
	    
        <!-- Title -->
		<TextView
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content" 
			android:gravity="center"
			android:text="@string/title" 
			android:textStyle="bold">
		</TextView>
		
		<!-- blank -->	
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="10dp" 
				android:gravity="center" 
				android:text="" >
			</TextView>	
			
		<!-- Input data kecamatan -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
				
			<TextView 
				android:layout_width="100dp" 
				android:layout_height="wrap_content" 		
				android:gravity="center_vertical"
				android:text="@string/kecamatan">
			</TextView>
				
			<EditText 
			    android:layout_width="fill_parent" 
			    android:hint=""
				android:layout_height="40dp" 
				android:id="@+id/new_kecamatan" >
			</EditText>
		</LinearLayout>
		
		<!-- Input data desa -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			
			<TextView 
				android:layout_width="100dp" 
				android:layout_height="wrap_content" 
				android:text="@string/desa">
			</TextView>
				
			<EditText 
			    android:layout_width="fill_parent" 
			    android:hint=""
				android:layout_height="40dp" 
				android:id="@+id/new_desa" >
		    </EditText>
		</LinearLayout>
		    
		<!-- Input data kelurahan -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
		
			<TextView
				android:layout_width="100dp"  
				android:layout_height="fill_parent" 
				android:gravity="center_vertical"
				android:text="@string/kelurahan" >
			</TextView>
				
			<EditText 
				android:layout_width="fill_parent" 
				android:layout_height="40dp"
				android:hint=""
				android:id="@+id/nama_kelurahan">
			</EditText>
		</LinearLayout>
			
		<!-- blank -->	
			<TextView
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content"
				android:text="">
			</TextView>
			
		<!-- keterangan -->
		<TextView
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content" 
			android:textStyle="italic"
			android:textSize="12dp"
			android:text="@string/keterangan">
		</TextView>
		
		<!-- blank -->	
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content"
				android:text="">
			</TextView>
			
		<!-- Input jumlah bangunan posyandu  -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			
			<TextView 
				android:layout_width="190dp" 
				android:layout_height="fill_parent" 
				android:gravity="center_vertical"
				android:text="@string/jml_bangunan">
			</TextView>
				
			<EditText 
			    android:layout_width="fill_parent" 
				android:layout_height="40dp" 
				android:hint=""
				android:id="@+id/new_jml_bangunan" >
			</EditText>
		</LinearLayout>
		
		<!-- blank -->
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="10dp" 
				android:text="" >
			</TextView>
			
		<!-- title SKDN -->	
		<TextView 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:textStyle="bold" 
			android:text="@string/title_skdn">
		</TextView>
		
		<!-- blank -->	
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="10dp" 
				android:gravity="center" 
				android:text="" >
			</TextView>
			
		<!-- Input S dan K-->	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			
			<TextView 
				android:layout_width="30dp" 
				android:layout_height="wrap_content" 
				android:text="@string/s">
			</TextView>
				
			<EditText 
			    android:layout_width="90dp" 
				android:layout_height="40dp" 
				android:hint=""
				android:id="@+id/new_s"> 
			</EditText>
				
				<TextView
					android:layout_width="wrap_content"  
					android:layout_height="10dp" 
					android:gravity="center" 
					android:text="@string/space" >
				</TextView>
				
			<TextView 
				android:layout_width="30dp" 
				android:layout_height="wrap_content" 
				android:text="@string/k">
			</TextView>
				
			<EditText 
			    android:layout_width="90dp" 
				android:layout_height="40dp" 
				android:hint=""
				android:id="@+id/new_k" >
			</EditText>
		</LinearLayout>
		
		<!-- Input D dan N -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
				
			<TextView 
				android:layout_width="30dp" 
				android:layout_height="wrap_content" 
				android:text="@string/d">
			</TextView>
				
			<EditText 
			    android:layout_width="90dp" 
				android:layout_height="40dp"
				android:hint="" 
				android:id="@+id/new_d"> 
			</EditText>
				
				<TextView
					android:layout_width="wrap_content"  
					android:layout_height="10dp" 
					android:gravity="center" 
					android:text="@string/space" >
				</TextView>
				
			<TextView 
				android:layout_width="30dp" 
				android:layout_height="wrap_content" 
				android:text="@string/n">
			</TextView>
				
			<EditText 
			    android:layout_width="90dp" 
				android:layout_height="40dp" 
				android:hint=""
				android:id="@+id/new_n"> 
			</EditText>
		</LinearLayout>
			
		<!-- blank -->	
			<TextView
				android:layout_width="fill_parent"  
				android:layout_height="10dp" 
				android:gravity="center" 
				android:text="" >
			</TextView>
			
		<!-- Input Program Pengembangan/ Integrasi -->	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
				
			<TextView 
				android:layout_width="190dp" 
				android:layout_height="fill_parent" 
				android:gravity="center_vertical"
				android:text="@string/prog_pengembangan">
			</TextView>
				
			<EditText 
			    android:layout_width="fill_parent" 
				android:layout_height="40dp" 
				android:hint=""
				android:id="@+id/new_progPengembangan" >
			</EditText>
		</LinearLayout>
		
		<!-- blank -->	
			<TextView
				android:layout_width="fill_parent"  
				android:layout_height="10dp"  
				android:text="" >
			</TextView>
			
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center">
				
			<Button 
			    android:layout_width="100dp"
				android:layout_height="45dp" 
				android:id="@+id/daftar" 
				android:text="@string/btnSubmit">
			</Button>
		</LinearLayout>
	</LinearLayout>	
</ScrollView>