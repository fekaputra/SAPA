<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#d3d3d3"
	        android:drawableLeft="@drawable/disease"
	        android:gravity="center_vertical"
	        android:text="  DISEASE"
	        android:textColor="#000000"
	        android:textSize="15dp"
	        android:textStyle="bold"
	        android:paddingLeft="5dip" >
	    </TextView>
	
	    <!-- Garis Pemisah -->
	
	    <View
	        android:layout_width="wrap_content"
	        android:layout_height="2dip"
	        android:background="#696969" />
	
	    <!-- blank -->
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="" >
	    </TextView>
	
	    <!-- Nama Pelapor -->
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="90dp"
	            android:layout_height="fill_parent"
	            android:gravity="center_vertical"
	            android:text="@string/namaPelapor"
	            android:textColor="#ffffff" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/nama_pelapor"
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:hint=""
	            android:singleLine="true" >
	        </EditText>
	    </LinearLayout>
	
	    <!-- Lokasi -->
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="90dp"
	            android:layout_height="fill_parent"
	            android:gravity="center_vertical"
	            android:text="@string/lokasi"
	            android:textColor="#ffffff" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/lokasi"
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:hint=""
	            android:singleLine="true" >
	        </EditText>
	    </LinearLayout>
	
	    <!-- Gejala/ Keluhan -->
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="90dp"
	            android:layout_height="fill_parent"
	            android:gravity="center_vertical"
	            android:text="@string/gejala"
	            android:textColor="#ffffff" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/gejala_keluhan"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10"
	            android:hint=""
	            android:inputType="textMultiLine"
	            android:scrollHorizontally="true" >
	        </EditText>
	    </LinearLayout>
	
	    <!-- Laporan -->
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="90dp"
	            android:layout_height="fill_parent"
	            android:gravity="center_vertical"
	            android:text="@string/laporan"
	            android:textColor="#ffffff" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/laporan"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10"
	            android:hint=""
	            android:inputType="textMultiLine"
	            android:scrollHorizontally="true" >
	        </EditText>
	    </LinearLayout>
	
	    <!-- Tag -->
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="90dp"
	            android:layout_height="wrap_content"
	            android:text="@string/tag"
	            android:textColor="#ffffff" >
	        </TextView>
	
	        <EditText
	            android:id="@+id/tag"
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:hint=""
	            android:singleLine="true" >
	        </EditText>
	    </LinearLayout>
	
	    <!-- Keterangan -->
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/keterangan4"
	        android:textColor="#ffffff"
	        android:textStyle="italic" >
	    </TextView>
	
	    <!-- blank -->
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="10dp"
	        android:text="" >
	    </TextView>
	
	    <!-- blank -->
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="10dp"
	        android:text="" >
	    </TextView>
	
	    <!-- blank -->
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="10dp"
	        android:text="" >
	    </TextView>
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center" >
	
	        <!-- Kirim -->
	
	        <Button
	            android:id="@+id/kirim"
	            android:layout_width="150dp"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/send_ldpi"
	            android:text="@string/btnKirim" >
	        </Button>
	
	        <!-- Kembali -->
	
	        <Button
	            android:id="@+id/home_report"
	            android:layout_width="150dp"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/back_ldpi"
	            android:text="@string/btnKembali" >
	        </Button>
	    </LinearLayout>
	
	</LinearLayout>
</ScrollView>