<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	<!-- Title -->
	<TextView
		android:layout_width="fill_parent"  
		android:layout_height="wrap_content" 
		android:gravity="center" 
		android:textSize="18dp"
		android:text="@string/title_tumbuh_kembang" >
	</TextView>
	
	<!-- blank -->	
	    <TextView
			android:layout_width="fill_parent"  
			android:layout_height="15dp"
			android:text="" >
		</TextView>
	    
    <!-- Nama Anak -->
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		
		<TextView
			android:layout_width="90dp"  
			android:layout_height="wrap_content" 
			android:gravity="center_vertical"
			android:text="@string/namaAnak" >
		</TextView>		
		
		<TextView
			android:id="@+id/namaAnak"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>
 
	<!-- Jenis Kelamin -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		
		<TextView 
			android:layout_width="90dp" 
			android:layout_height="wrap_content" 
			android:gravity="center_vertical"
			android:text="@string/jk">
		</TextView>
		
		<EditText 
		   android:layout_width="fill_parent" 
		   android:layout_height="40dp"
		   android:hint=""
		   android:singleLine="true"
		   android:id="@+id/jk" >
		</EditText>
	</LinearLayout>  
	
	<!-- blank -->
	    <TextView
			android:layout_width="fill_parent"  
			android:layout_height="10dp"
			android:text="" >
		</TextView>	
	
    <!-- Garis Pemisah -->
	<View
        android:layout_height="2dip"
        android:background="#ffffff" />
 	
	<!-- blank -->
	    <TextView
			android:layout_width="fill_parent"  
			android:layout_height="10dp"
			android:text="" >
		</TextView>

    <!-- Tanggal Pendataan -->
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	
		<TextView
			android:layout_width="90dp"  
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="@string/tgl_pendataan" >
		</TextView>
	
		<EditText 
			android:layout_width="fill_parent" 
			android:layout_height="40dp"
			android:hint=""
			android:singleLine="true"
			android:inputType="number"
			android:id="@+id/tgl_data">
		</EditText>
	</LinearLayout>
	    	
    <!-- Panjang Badan -->
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	
		<TextView
			android:layout_width="90dp"  
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="@string/panjang_badan" >
		</TextView>
		
		<EditText 
			android:layout_width="70dp" 
			android:layout_height="40dp"
			android:hint=""
			android:singleLine="true"
			android:inputType="number"
			android:id="@+id/panjang">
		</EditText>
		
		<!-- Keterangan -->
		<TextView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:text="@string/keterangan5">
		</TextView>		
	</LinearLayout>
	
    <!-- Tinggi Badan -->
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	
		<TextView
			android:layout_width="90dp"  
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="@string/tinggi_badan" >
		</TextView>	
				
		<EditText 
			android:layout_width="70dp" 
			android:layout_height="40dp"
			android:hint=""
			android:singleLine="true"
			android:inputType="number"
			android:id="@+id/tinggi">
		</EditText>
		
		<!-- Keterangan -->
		<TextView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:text="@string/keterangan6">
		</TextView>			
	</LinearLayout>
		
	<!-- Berat Badan -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		
		<TextView 
			android:layout_width="90dp" 
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:text="@string/bb">
		</TextView>
		
		<EditText 
		    android:layout_width="70dp" 
			android:layout_height="40dp" 
			android:hint=""
			android:singleLine="true"
			android:inputType="number"
			android:id="@+id/berat" >
		</EditText>
		
		<!-- Keterangan -->
		<TextView 
			android:layout_width="90dp" 
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:text="@string/kb">
		</TextView>		
	</LinearLayout>

	<!-- blank -->
	    <TextView
			android:layout_width="fill_parent"  
			android:layout_height="10dp"  
			android:text="" >
		</TextView>	
					
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
	
		<!-- Kirim -->
		<Button 
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:id="@+id/kirim" 
			android:text="@string/btnKirim">
		</Button>
		
		<!-- Lihat Grafik -->
		<Button 
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:id="@+id/grafik" 
			android:text="@string/lihatGrafik">
	    </Button>
					
		<!-- Kembali -->
		<Button 
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:id="@+id/kembali" 
			android:text="@string/btnKembali">
		</Button>
	</LinearLayout>

</TableLayout>