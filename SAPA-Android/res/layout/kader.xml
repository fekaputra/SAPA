<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Title -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="  Kader"
       android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="#d3d3d3"
        android:drawableLeft="@drawable/kader_ldpi"
        android:gravity="center_vertical" >
    </TextView>

    <!-- Garis Pemisah -->

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#696969" />

    <!-- blank -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:text="" >
    </TextView>
    
    <!-- blank -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:text="" >
    </TextView>

    <!-- Id Kelurahan/ Desa -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/id_kelurahan"
            android:textColor="#ffffff" >
        </TextView>

        <TextView
            android:id="@+id/idKelurahan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" >
        </TextView>
    </LinearLayout>

    <!-- blank -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:text="" >
    </TextView>

    <!-- Jumlah Total -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/jmlTotal"
            android:textColor="#ffffff" >
        </TextView>

        <EditText
            android:id="@+id/jml_total"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint=""
            android:inputType="number"
            android:singleLine="true" >
        </EditText>
    </LinearLayout>

    <!-- Kader Terlatih -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="@string/kaderTerlatih"
            android:textColor="#ffffff" >
        </TextView>

        <EditText
            android:id="@+id/kader_terlatih"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint=""
            android:inputType="number"
            android:singleLine="true" >
        </EditText>
    </LinearLayout>

    <!-- blank -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:gravity="center"
        android:text="" >
    </TextView>

    <!-- Submit -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/daftar"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="@string/btnKirim"
            android:drawableLeft="@drawable/send_ldpi" >
        </Button>
    </LinearLayout>

</LinearLayout>