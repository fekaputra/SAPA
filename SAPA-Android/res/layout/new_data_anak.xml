<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg30">
		
    <TextView
		android:layout_width="fill_parent"  
		android:layout_height="wrap_content" 
		android:gravity="center" 
		android:text="" >
	</TextView>
    
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	
		<TextView
			android:layout_width="90dp"  
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:textColor="#ffffff"
			android:text="Nama Posyandu" >
		</TextView>
		
		<EditText 
			android:layout_width="fill_parent" 
			android:layout_height="40dp"
			android:id="@+id/nama_posyandu">
		</EditText>
	</LinearLayout>
    
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	
		<TextView
			android:layout_width="90dp"  
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:textColor="#ffffff"
			android:text="Nama Anak" >
		</TextView>
		
		<EditText 
			android:layout_width="fill_parent" 
			android:layout_height="40dp"
			android:id="@+id/new_namaAnak">
		</EditText>
		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		
		<TextView 
			android:layout_width="90dp" 
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:textColor="#ffffff"
			android:text="Jenis Kelamin">
		</TextView>
		
		<RadioGroup 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:id="@+id/radioGroupSex">
		    
		    <RadioButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:checked="true"
		        android:id="@+id/radioMale"
		        android:text="laki-laki">   
		    </RadioButton>
		    
		    <RadioButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:id="@+id/radioFemale"
		        android:text="Perempuan">
		    </RadioButton>
		</RadioGroup>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		
		<TextView 
			android:layout_width="90dp" 
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:textColor="#ffffff"
			android:text="Tanggal Lahir">
		</TextView>
		
		<EditText 
		    android:layout_width="fill_parent" 
			android:layout_height="40dp"
			android:id="@+id/new_tglLahir" 
			></EditText>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		
		<TextView 
			android:layout_width="90dp" 
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:textColor="#ffffff"
			android:text="Berat Badan Saat Lahir">
		</TextView>
		
		<EditText 
		    android:layout_width="fill_parent" 
			android:layout_height="40dp" 
			android:id="@+id/new_bbLahir" 
			></EditText>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		
		<TextView 
			android:layout_width="90dp" 
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:textColor="#ffffff"
			android:text="Nama Ibu">
		</TextView>
		
		<EditText 
		    android:layout_width="fill_parent" 
			android:layout_height="40dp" 
			android:id="@+id/new_namaIbu" 
			></EditText>
	</LinearLayout>
	
		<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		
		<TextView 
			android:layout_width="90dp" 
			android:layout_height="fill_parent" 
			android:gravity="center_vertical"
			android:textColor="#ffffff"
			android:text="Nama Ayah">
		</TextView>
		
		<EditText 
		    android:layout_width="fill_parent" 
			android:layout_height="40dp" 
			android:id="@+id/new_namaAyah" 
			></EditText>
	</LinearLayout>

	<TextView
		android:layout_width="fill_parent"  
		android:layout_height="wrap_content" 
		android:gravity="center" 
		android:text="" >
	</TextView>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
		
		<Button 
		    android:layout_width="100dp"
			android:layout_height="40dp" 
			android:id="@+id/daftar" 
			android:text="Daftar">
		</Button>
		
		<Button 
		    android:layout_width="100dp"
			android:layout_height="40dp" 
			android:id="@+id/kembali" 
			android:text="Kembali">
		</Button>
	</LinearLayout>
	
<!-- 	<ListView
		android:id="@+id/listView1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	</ListView> -->

</LinearLayout>