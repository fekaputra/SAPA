<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <!-- blank -->	
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content"
				android:text="" >
			</TextView>
	    
	    <!-- Nama Anak -->
	    <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			
			<TextView
				android:layout_width="90dp"  
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:text="@string/namaAnak" >
			</TextView>		
			
			<TextView
				android:id="@+id/namaAnak"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</TextView>
		</LinearLayout>
		
	    <!-- blank -->
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="10dp"
				android:text="" >
			</TextView>	
	 
		<!-- Jenis Kelamin -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			
			<TextView 
				android:layout_width="90dp" 
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:text="@string/jk">
			</TextView>
			
			<TextView
			   android:layout_width="fill_parent" 
			   android:layout_height="wrap_content"
			   android:id="@+id/jk" >
			</TextView>
		</LinearLayout>  
		
		<!-- blank -->
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="10dp"
				android:text="" >
			</TextView>	
		
	    <!-- Garis Pemisah -->

		<View
		    android:layout_width="wrap_content"
		    android:layout_height="2dip"
		    android:background="#ffffff" />
	 	
		<!-- blank -->
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="10dp"
				android:text="" >
			</TextView>
	    
	    <!-- Title : Pilih Usia/ Bulan -->
		<TextView
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content" 
			android:text="@string/usia">
		</TextView>
	    
	    <!-- Spinner Usia/ Bulan -->
		<LinearLayout
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">
			
			<Spinner
				android:id="@+id/spinner1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >
			</Spinner>
		</LinearLayout>
		
		<!-- blank -->	
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content"
				android:text="" >
			</TextView>
		
		<!-- Jenis Imunisasi -->
	    <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			
			<TextView
				android:layout_width="90dp"  
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:text="@string/jenisimunisasi" >
			</TextView>		
			
			<TextView
				android:id="@+id/jns_imunisasi"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</TextView>
		</LinearLayout>
		
	    <!-- blank -->	
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content"
				android:text="" >
			</TextView>
		
		<!-- Tanggal Imunisasi -->
		<TextView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:text="@string/tglimunisasi">
		</TextView>
			
		<DatePicker
		    android:id="@+id/dateTanggal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
		<!-- blank -->
			<TextView
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content" 
				android:text="" >
			</TextView>
			
		<!-- blank -->	
		    <TextView
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content"
				android:text="" >
			</TextView>	
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center">
		
			<!-- Kirim -->
			<Button 
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:id="@+id/kirim" 
				android:text="@string/btnKirim">
			</Button>
			
			<!-- Lihat Grafik -->
			<Button 
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:id="@+id/grafik" 
				android:text="@string/lihatGrafik">
		    </Button>
						
			<!-- Kembali -->
			<Button 
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:id="@+id/kembali" 
				android:text="@string/btnKembali">
			</Button>
		</LinearLayout>
	</LinearLayout>
</ScrollView>