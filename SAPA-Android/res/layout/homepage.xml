		android:text="">
	</TextView>
	
	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		
	    <Button 
			android:layout_width="150dp"
			android:layout_height="40dp" 
			android:id="@+id/gis" 
			android:text="e-GIS">
