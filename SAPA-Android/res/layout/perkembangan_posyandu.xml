<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
				
	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
    	
	    <!-- Input data baru -->
    	<Button 
		    android:layout_width="wrap_content"
			android:layout_height="45dp" 
			android:id="@+id/data_posyandu" 
			android:text="@string/btnDataPosyandu">
		</Button>
		
    	<!-- Kembali ke menu e-report -->
    	<Button  
			android:id="@+id/kembali"
		    android:layout_width="150dp"
			android:layout_height="45dp" 
			android:text="@string/btnKembali">
		</Button>
	</LinearLayout>
	
	<!-- blank -->
		<TextView 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:text="">
		</TextView>
	
	<!-- Pilih Kelurahan/ Desa -->
	<TextView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="@string/pilih_kelurahan">
	</TextView>
	
	<!-- Spinner Nama Kelurahan/ Desa -->
	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		
		<Spinner
			android:id="@+id/spinner1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
		</Spinner>
	</LinearLayout>
	
	<!-- blank -->
		<TextView 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:text="">
		</TextView>
	
	<TextView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:textStyle="italic"
		android:textSize="12dp" 
		android:text="@string/keterangan2">
	</TextView>
	
	<!-- blank -->
		<TextView 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:text="">
		</TextView>
	
	<!-- Strata -->	
	<Button 
		android:id="@+id/strata"
	    android:layout_width="250dp"
		android:layout_height="45dp" 
		android:layout_gravity="center" 
		android:text="@string/btnStrata">
	</Button>
	
	<!-- Kader -->
	<Button 
		android:id="@+id/kader" 
	    android:layout_width="250dp"
		android:layout_height="45dp" 
		android:layout_gravity="center"
		android:text="@string/btnKader">
	</Button>
	
	<!-- Program Pokok -->
	<Button 
		android:id="@+id/prog_pokok"
	    android:layout_width="250dp"
		android:layout_height="45dp"
		android:layout_gravity="center"  
		android:text="@string/btnProgramPokok">
	</Button>
</LinearLayout>