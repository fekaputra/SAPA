<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@drawable/childcare">
    
    <!-- blank -->
	    <TextView
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content" 
			android:text="">
		</TextView>
	
	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
		
	    <!-- Daftar Data Anak -->
	    <Button 
			android:layout_width="150dp"
			android:layout_height="40dp" 
			android:id="@+id/daftar_data_anak"
			android:text="@string/btn_new_data_anak">
		</Button>
		
	    <!-- Kembali ke Menu e-Report -->
	    <Button 
			android:layout_width="150dp"
			android:layout_height="40dp" 
			android:id="@+id/home_report" 
			android:text="@string/btnKembali">
		</Button>
	</LinearLayout>
	
	<!-- blank -->
		<TextView
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content" 
			android:text="">
		</TextView>
	
	<!-- Title : Pilih Nama Anak -->
	<TextView
		android:layout_width="fill_parent"  
		android:layout_height="wrap_content" 
		android:textStyle="bold"
		android:textColor="#696969" 
		android:text="@string/pilih_nama_anak">
	</TextView>
	
	<!-- Spinner Nama Anak -->
	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		
		<Spinner
			android:id="@+id/spinner1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
		</Spinner>
	</LinearLayout>
	
	<!-- blank -->
		<TextView
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content" 
			android:text="">
		</TextView>
	
	<!-- Next -->
	<Button 
		android:layout_width="150dp"
		android:layout_height="40dp" 
		android:id="@+id/tumbuh_kembang_anak" 
		android:text="@string/btnNext">
	</Button>
</LinearLayout>