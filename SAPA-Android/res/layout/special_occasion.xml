<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Title -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        android:drawableLeft="@drawable/calendar1"
        android:gravity="center_vertical"
        android:text="  SPECIAL OCCASION"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingLeft="5dip" >
    </TextView>

    <!-- Garis Pemisah -->

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#696969" />

    <!-- blank -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:text="" >
    </TextView>

    <!-- Nama Kegiatan -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/namaKegiatan"
            android:textColor="#ffffff" >
        </TextView>

        <EditText
            android:id="@+id/nama_kegiatan"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint=""
            android:singleLine="true" >
        </EditText>
    </LinearLayout>

    <!-- Penyelenggara -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/penyelenggara"
            android:textColor="#ffffff" >
        </TextView>

        <EditText
            android:id="@+id/nama_penyelenggara"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint=""
            android:singleLine="true" >
        </EditText>
    </LinearLayout>

    <!-- Waktu Kegiatan -->

    <TextView
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:text="@string/waktuKegiatan"
        android:textColor="#ffffff" >
    </TextView>

    <DatePicker
        android:id="@+id/dateTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- blank -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:text="" >
    </TextView>

    <!-- Kota -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/kota"
            android:textColor="#ffffff" >
        </TextView>

        <EditText
            android:id="@+id/kota"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint=""
            android:singleLine="true" >
        </EditText>
    </LinearLayout>

    <!-- Topik -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/topik"
            android:textColor="#ffffff" >
        </TextView>

        <EditText
            android:id="@+id/topik"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint=""
            android:singleLine="true" >
        </EditText>
    </LinearLayout>

    <!-- Tag -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/tag"
            android:textColor="#ffffff" >
        </TextView>

        <EditText
            android:id="@+id/tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:singleLine="true" >
        </EditText>
    </LinearLayout>

    <!-- Keterangan -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/keterangan4"
        android:textColor="#ffffff"
        android:textStyle="italic" >
    </TextView>

    <!-- blank -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:text="" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <!-- Kirim -->

        <Button
            android:id="@+id/kirim"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/send_ldpi"
            android:gravity="center"
            android:text="@string/btnKirim" >
        </Button>

        <!-- Kembali -->

        <Button
            android:id="@+id/home_report"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/back_ldpi"
            android:gravity="center"
            android:text="@string/btnKembali" >
        </Button>
    </LinearLayout>

</LinearLayout>